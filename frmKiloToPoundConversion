    private void fSliderStateChanged(javax.swing.event.ChangeEvent evt) {                                     
    fSliderValue.setText("Kilo Value: " + fSlider.getValue());
    }                                    

    private void fSpinnerStateChanged(javax.swing.event.ChangeEvent evt) {                                      
        fSpinnerValue.setText("" + fSpinner.getValue());
    }                                     

    private void fConvertButtonActionPerformed(java.awt.event.ActionEvent evt) {                                               
        double convertedValue = fSlider.getValue() * 2.2046;
        fConversion.setText("Conversion to Kilograms: " + convertedValue);

    }                                              

    private void fConvertButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                                
        String number = fSpinnerValue.getText();
        double number1 = Double.parseDouble(number);
        double answer = number1 * 2.2046;
        fConversion1.setText("Conversion to Kilograms: " + answer);

    }                                               

    private void fToggle1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if (fToggle1.isSelected()) {
            fSpinner.setEnabled(true);
            fSpinnerValue.setEnabled(true);
            fSpinnerValue1.setEnabled(true);
            fConvertButton1.setEnabled(true);
            fConversion1.setEnabled(true);
            fSlider.setEnabled(false);
            fSliderValue.setEnabled(false);
            fConvertButton.setEnabled(false);
            fConversion.setEnabled(false);
        }
        else {
            fSpinner.setEnabled(false);
            fSpinnerValue.setEnabled(false);
            fSpinnerValue1.setEnabled(false);    
            fConvertButton1.setEnabled(false);
            fConversion1.setEnabled(false);
        }

    }                                        

    private void fToggleActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if (fToggle.isSelected()) {
            fSlider.setEnabled(true);
            fSliderValue.setEnabled(true);
            fConvertButton.setEnabled(true);
            fConversion.setEnabled(true);
            fSpinner.setEnabled(false);
            fSpinnerValue.setEnabled(false);        
            fSpinnerValue1.setEnabled(false);
            fConvertButton1.setEnabled(false);
            fConversion1.setEnabled(false);
        }
        else {
            fSlider.setEnabled(false);
            fSliderValue.setEnabled(false);
            fConvertButton.setEnabled(false);
            fConversion.setEnabled(false);
        }
    }                                       

